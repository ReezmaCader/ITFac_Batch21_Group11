{
  "name": "qa-training-tests",
  "version": "1.0.0",
  "description": "Test automation repository for the ITQA module",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:playwright:ci && npm run test:cucumber",
    "test:playwright": "npx playwright test",
    "test:playwright:ci": "npx playwright test --reporter=list",
    "test:cucumber": "node run-cucumber.js all",
    "report:generate": "node generate-report.js",
    "report:open": "start reports/html/index.html",
    "test:full": "npm run test:cucumber && npm run report:generate && npm run report:open"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^12.6.0",
    "@playwright/test": "^1.58.1",
    "@types/node": "^25.1.0",
    "multiple-cucumber-html-reporter": "^3.9.3"
  }
}
